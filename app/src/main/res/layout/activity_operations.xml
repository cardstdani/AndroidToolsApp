<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OperationsActivity">

    <ScrollView
        android:id="@+id/scrollViewInformation"
        android:layout_width="412dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:fillViewport="true"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/labelTiempo"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/description"
                android:gravity="center"
                android:text="20"
                android:textColor="#000000"
                android:textColorHint="#00D6BCBC"
                android:textSize="18sp"
                android:textStyle="bold"
                android:verticalScrollbarPosition="defaultPosition" />

            <TextView
                android:id="@+id/labelTitulo"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/description"
                android:gravity="center"
                android:text="MINIMO DIVISIBLE"
                android:textColor="#000000"
                android:textColorHint="#00D6BCBC"
                android:textSize="18sp"
                android:textStyle="bold"
                android:verticalScrollbarPosition="defaultPosition" />

            <View
                android:id="@+id/viewSeparador"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="#C7C6C1" />

            <EditText
                android:id="@+id/inputNumero"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="Enter number..."
                android:inputType="textPersonName"
                android:text="10" />

            <Button
                android:id="@+id/butonCalcular"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="CALCULAR"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/outputNumero"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/description"
                android:gravity="center_vertical"
                android:text="DEVICE FEATURES"
                android:textColor="#000000"
                android:textColorHint="#00D6BCBC"
                android:textSize="18sp"
                android:textStyle="bold"
                android:verticalScrollbarPosition="defaultPosition" />

            <TextView
                android:id="@+id/labelTitulo24"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/description"
                android:gravity="center"
                android:text="FACTORIAL"
                android:textColor="#000000"
                android:textColorHint="#00D6BCBC"
                android:textSize="18sp"
                android:textStyle="bold"
                android:verticalScrollbarPosition="defaultPosition" />

            <View
                android:id="@+id/viewSeparador2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="#C7C6C1" />

            <EditText
                android:id="@+id/inputNumeroFactorial"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="Enter number..."
                android:inputType="textPersonName"
                android:text="10" />

            <Button
                android:id="@+id/butonCalcularFactorial"
                android:layout_width="290dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="CALCULAR"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/outputNumeroFactorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:contentDescription="@string/description"
                android:gravity="center_vertical"
                android:text="DEVICE FEATURES"
                android:textColor="#000000"
                android:textColorHint="#00D6BCBC"
                android:textSize="18sp"
                android:textStyle="bold"
                android:verticalScrollbarPosition="defaultPosition" />

            <TextView
                android:id="@+id/labelTitulo27"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#00FFFFFF"
                android:contentDescription="@string/description"
                android:gravity="center"
                android:text="IRREAL TRIPLES"
                android:textColor="#000000"
                android:textColorHint="#00D6BCBC"
                android:textSize="18sp"
                android:textStyle="bold"
                android:verticalScrollbarPosition="defaultPosition" />

            <View
                android:id="@+id/viewSeparador3"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="center"
                android:background="#C7C6C1" />

            <EditText
                android:id="@+id/inputTriples"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="Enter number..."
                android:inputType="textPersonName"
                android:text="10" />

            <Button
                android:id="@+id/butonCalcularTriples"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:text="LOAD ITERATIONS"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/outputTriples"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:contentDescription="@string/description"
                android:gravity="center_vertical"
                android:text="DEVICE FEATURES"
                android:textColor="#000000"
                android:textColorHint="#00D6BCBC"
                android:textSize="18sp"
                android:textStyle="bold"
                android:verticalScrollbarPosition="defaultPosition" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>